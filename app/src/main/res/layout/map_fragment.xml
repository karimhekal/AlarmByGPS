<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">



    <com.google.android.gms.maps.MapView

        android:layout_width="match_parent"
        android:id="@+id/map"
        android:layout_height="match_parent"

        >
    </com.google.android.gms.maps.MapView>
    <LinearLayout
        android:paddingHorizontal="0dp"
        android:background="@color/transparent"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <Button
                android:fontFamily="serif-monospace"
                android:elevation="100dp"
                android:textStyle="bold"

                android:layout_weight="0.5"
                android:layout_marginRight="15dp"
                android:id="@+id/set_radius"
                android:layout_width="0.5in"
                android:layout_height="wrap_content"
                android:background="@color/custom"
                android:text="Set circle radius" />
            <Button
                android:textStyle="bold"
                android:fontFamily="serif-monospace"
                android:elevation="100dp"
                android:background="@color/custom"
                android:layout_weight="0.5"
                android:layout_width="0.5in"
                android:id="@+id/clear_markers"
                android:layout_height="wrap_content"
                android:text="Clear Markers"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"

            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/edit_text"
                android:padding="8dp"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_weight="0.5"
                android:autoSizeMaxTextSize="50dp"
                android:background="@drawable/rounded_border"
                android:fontFamily="sans-serif-medium"
                android:hint="radius 'in meters'"
                android:textSize="15dp" />
            <RadioGroup
                android:padding="5dp"
                android:id="@+id/rg"
                android:layout_width="wrap_content"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:textStyle="bold"
                    android:fontFamily="serif-monospace"
                    android:id="@+id/polygon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Polygon" />

                <RadioButton
                    android:textStyle="bold"
                    android:fontFamily="serif-monospace"
                    android:id="@+id/circle"
                    android:textColor="#000000"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Circle" />
            </RadioGroup>


        </LinearLayout>

    </LinearLayout>

</FrameLayout>